version: 1

formatters:
  precise:
    format: "%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(request)s - %(message)s"

handlers:
  file:
    class: logging.handlers.RotatingFileHandler
    formatter: precise
    filename: /data/homeserver.log
    maxBytes: 104857600
    backupCount: 10
    encoding: utf8

loggers:
  synapse:
    level: INFO
    handlers: [file]
    propagate: false

root:
  level: INFO
  handlers: [file]

